<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="blackmail" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>BlackMail</label>
            <tab>general</tab>
            <resource>Trung_BlackMail::blackmail_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Black list mail Configuration</label>
                <field id="blacklist_emails" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Blacklist Emails</label>
                    <comment>Enter blacklisted emails, separated by commas.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
