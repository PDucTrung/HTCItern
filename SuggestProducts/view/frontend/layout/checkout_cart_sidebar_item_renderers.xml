<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="minicart.addons">
            <block class="Trung\SuggestProducts\Block\SuggestProductsBlock" name="custom.block" template="Trung_SuggestProducts::suggest_template.phtml" cacheable="false"/>
        </referenceContainer>
        <referenceBlock name="minicart" template="Magento_Checkout::cart/minicart.phtml">
            <action method="setData">
                <argument name="data" xsi:type="array">
                    <item name="proceed_to_checkout" xsi:type="array">
                        <item name="componentDisabled" xsi:type="boolean">true</item>
                    </item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
