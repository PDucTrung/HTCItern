<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Trung\CustomTab\Block\CustomTab" name="trung.custom.tab" template="Trung_CustomTab::custom_tab.phtml" group="detailed_info" ifconfig="trung_custom_tab_section/general/status">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Custom Tab</argument>
                    <argument name="sort_order" xsi:type="string">200</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
